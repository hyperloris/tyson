{
  "name": "@hyperloris/tyson",
  "version": "1.4.0",
  "description": "A TypeScript serialization/deserialization library to convert objects to/from JSON.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyperloris/tyson.git"
  },
  "license": "MIT",
  "author": "Lorenzo Gigli <lorenzo.dramis@gmail.com>",
  "main": "./dist/main.js",
  "module": "./dist/module.js",
  "source": "./src/index.ts",
  "types": "./dist/types.d.ts",
  "scripts": {
    "build": "parcel build",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "format:check": "prettier --check \"{src,test}/**/*.ts\"",
    "lint": "eslint --fix \"{src,test}/**/*.ts\"",
    "lint:check": "eslint \"{src,test}/**/*.ts\"",
    "prepare": "husky install",
    "release": "release-it",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@parcel/packager-ts": "^2.8.2",
    "@parcel/transformer-typescript-types": "^2.8.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "parcel": "^2.8.2",
    "prettier": "^2.8.2",
    "release-it": "^15.6.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
